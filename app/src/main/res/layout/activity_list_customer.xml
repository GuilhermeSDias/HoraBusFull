<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/v_txt_origem_destino"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/v_txt_hora"
            android:textSize="20sp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="1dp"

            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/v_txt_empresa"
            android:textSize="16sp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="28dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/v_txt_valor"
            android:layout_below="@+id/v_txt_origrm_destino"
            android:layout_alignLeft="@+id/v_txt_origrm_destino"
            android:layout_alignStart="@+id/v_txt_origrm_destino"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="23dp"
            />

</RelativeLayout>